@model CleanArchitecture.Application.ViewModels.OneSignalAppViewModel


<h1>Update App</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">

            <div class="toast" style="position: fixed; top: 100px; right: 100px; z-index:99;" id="mytoastr">
                <div class="toast-header">
                    <strong class="mr-auto">Update Status</strong>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.OneSignalApps.name" class="control-label"></label>
                <input asp-for="@Model.OneSignalApps.name" class="form-control" />
                <span asp-validation-for="@Model.OneSignalApps.name" class="text-danger"></span>
                <input type="hidden" asp-for="@Model.OneSignalApps.id" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* Function to show toast message *@
    <script>
          $(function(){
             var msg = "@(ViewData["Msg"] as string)";
              if (msg !== "") {
                  if (msg.includes('Error')) {
                      $('.toast-body').addClass('alert-danger');
                  } else {
                      $('.toast-body').addClass('alert-success');
                  }
                  $('.toast-body').html(msg);
                  $("#mytoastr").toast({
                      delay: 5000
                  });
                  $('#mytoastr').toast('show');
             }
          });
    </script>


}
